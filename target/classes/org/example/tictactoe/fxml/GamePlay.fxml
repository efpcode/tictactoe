<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<Pane  xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.example.tictactoe.view.controllers.GamePlayController">

    <BorderPane layoutX="-7.0" layoutY="7.0" maxHeight="960.0" maxWidth="960.0" minHeight="800.0" minWidth="800.0">
        <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
        </padding>

        <top>
            <VBox alignment="TOP_CENTER" maxHeight="180.0" minHeight="150.0" style="-fx-border-color: red;" stylesheets="@../css/gamePlay.css" BorderPane.alignment="CENTER">
                <TilePane>
                    <Button id="goBackToMenu" alignment="TOP_LEFT" onMouseClicked="#getGoBackToMenu" styleClass="menuButtonsPlay" text="Back To Game Menu" BorderPane.alignment="TOP_LEFT" />
                </TilePane>

                <TilePane alignment="TOP_CENTER" BorderPane.alignment="TOP_CENTER">
                    <Label alignment="TOP_RIGHT" contentDisplay="RIGHT" styleClass="roundDisplay" text="Round 0">
                  <TilePane.margin>
                     <Insets bottom="50.0" top="50.0" />
                  </TilePane.margin></Label>
               <opaqueInsets>
                  <Insets />
               </opaqueInsets>
               <VBox.margin>
                  <Insets />
               </VBox.margin>
                </TilePane>
            </VBox>
        </top>
        <left>
            <VBox alignment="CENTER_RIGHT" maxWidth="200.0" style="-fx-border-color: blue;" BorderPane.alignment="CENTER_RIGHT">


                <Label styleClass="playerToken" text="o" />
                <Label styleClass="scoreStyle" text="Score: O" />
                <Button alignment="CENTER" contentDisplay="CENTER" styleClass="playerSelectButton" text="Select" />
            </VBox>
        </left>
        <right>
            <VBox alignment="CENTER_LEFT" maxWidth="200.0" minWidth="100.0" style="-fx-border-color: magenta;" BorderPane.alignment="CENTER_LEFT">


                <Label styleClass="playerToken" text="x" />
                <Label styleClass="scoreStyle" text="Score: O" />
                <Button fx:id="rightButton" alignment="CENTER" contentDisplay="CENTER" styleClass="playerSelectButton" text="Select"/>

            </VBox>
        </right>
        <center>
            <GridPane id="gameBoard" alignment="CENTER" hgap="45.0" maxWidth="700.0" prefHeight="996.0" prefWidth="400.0" scaleX="0.62" scaleY="0.62" style="-fx-border-color: green;" stylesheets="@../css/gamePlay.css" vgap="45.0" BorderPane.alignment="CENTER">

                <ImageView nodeOrientation="INHERIT" GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
                    <Image url="@../images/robot.png" />
                </ImageView>

                <ImageView nodeOrientation="INHERIT" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
                    <Image url="@../images/circle.png" />
                </ImageView>

                <ImageView GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="0" GridPane.valignment="CENTER">
                    <Image url="@../images/cross.png" />
                </ImageView>

                <ImageView GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <Image url="@../images/robot.png" />
                </ImageView>

                <ImageView GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <Image url="@../images/robot.png" />
                </ImageView>

                <ImageView nodeOrientation="INHERIT" GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="1" GridPane.valignment="CENTER">
                    <Image url="@../images/robot.png" />
                </ImageView>

                <ImageView GridPane.columnIndex="0" GridPane.rowIndex="2">
                    <Image url="@../images/robot.png" />
                </ImageView>

                <ImageView GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                <Image url="@../images/robot.png" />
                </ImageView>

                <ImageView GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                    <Image url="@../images/robot.png" />
               <GridPane.margin>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </GridPane.margin>
                </ImageView>

                <ImageView GridPane.columnIndex="2" GridPane.halignment="CENTER" GridPane.rowIndex="2" GridPane.valignment="CENTER">
                    <Image url="@../images/robot.png" />
                </ImageView>
                <columnConstraints>
                    <ColumnConstraints />
                    <ColumnConstraints />
                    <ColumnConstraints />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints />
                    <RowConstraints />
                    <RowConstraints />
                </rowConstraints>


            </GridPane>
        </center>
        <bottom>
            <HBox alignment="CENTER" style="-fx-border-color: black;" BorderPane.alignment="BOTTOM_CENTER">
                <padding>
                    <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                </padding>
                <TilePane alignment="CENTER_LEFT" focusTraversable="true" hgap="100" BorderPane.alignment="BOTTOM_CENTER">
                    <Button text="Start" translateX="180.0" styleClass="menuButtonsPlay"/>
                    <Button text="Quit Game" translateX="180.0" styleClass="menuButtonsPlay" onMouseClicked="#quitGame"/>
                </TilePane>
            </HBox>
        </bottom>
    </BorderPane>
</Pane>
